<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LevelImageView">
        <attr name="level" format="float"></attr>
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableRight" format="reference" />
    </declare-styleable>

    <declare-styleable name="FuseImageView">
        <attr name="drawableDefault" format="reference" />
        <attr name="drawableFused" format="reference" />
    </declare-styleable>

    <declare-styleable name="DragScoreView">
        <attr name="holderIconEnable" format="reference" />
        <attr name="holderIconDisable" format="reference" />
        <attr name="dragMax" format="float|integer" />
        <attr name="dragMin" format="float|integer" />
        <attr name="scaleArr" format="string" />
        <attr name="railHeight" format="dimension" />
        <attr name="selectColor" format="reference|color" />
        <attr name="unSelectColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="ImageOuterTextView">
        <attr name="outerDrawable" format="reference" />
        <attr name="maxLengthText" format="string" />
        <attr name="innerText" format="string" />
        <attr name="innerTextRadian" format="float" />
        <attr name="innerRadius" format="integer" />
        <attr name="outerRadius" format="integer" />
        <attr name="innerTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

</resources>