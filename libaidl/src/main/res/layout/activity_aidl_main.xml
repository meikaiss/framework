<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.framework.AidlMainActivity">

    <Button
        android:id="@+id/btn_multi_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="多进程存在的问题" />

    <Button
        android:id="@+id/btn_aidl_one_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="aidl单向通信" />

    <Button
        android:id="@+id/btn_aidl_two_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="aidl双向通信" />

</LinearLayout>