<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.framework.demo">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name=".DemoApplicaton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.FlowLayoutActivity" />
        <activity android:name=".activity.ScrollLayoutActivity" />
        <activity android:name=".activity.ExplosionActivity" />
        <activity android:name=".activity.NumberSeekBarActivity" />
        <activity
            android:name=".activity.AppCompatTestActivity"
            android:theme="@style/Theme_TestAppCompat"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.StatusBarColorActivity"
            android:theme="@style/ColorStatusBar"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.nolib.NotificationActivity"
            android:theme="@style/Theme_TestAppCompat" />
        <activity android:name=".activity.BonuceLoadingActivity" />
        <activity android:name=".activity.CircleLoadingActivity" />

        <activity android:name=".activity.nolib.HandlerThreadActivity" />
        <activity android:name=".activity.nolib.IntentServiceActivity" />
        <activity android:name=".activity.nolib.LayoutWeightActivity" />
        <activity android:name=".activity.nolib.RippleActivity" />
        <activity
            android:name=".activity.BottomBarActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".activity.nolib.TabLayoutActivity"
            android:theme="@style/Theme_TabLayoutAppCompat" />
        <activity
            android:name=".activity.SlideViewPagerActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".activity.InputLinearLayoutActivity"
            android:theme="@style/BaseAppTheme"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".activity.nolib.CoordinatorLayoutActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".activity.nolib.CoordinatorLayoutActivity2"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".activity.nolib.CardViewActivity"
            android:theme="@style/BaseAppTheme" />


        <service android:name=".service.PlayMusicIntentService" />

    </application>

</manifest>

