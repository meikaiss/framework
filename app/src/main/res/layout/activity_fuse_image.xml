<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="融合ImageView" />

    <com.android.framework.libui.view.FuseImageView
        android:id="@+id/fuse_image_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:drawableDefault="@drawable/fuse1_default"
        app:drawableFused="@drawable/fuse1_color" />


    <com.android.framework.libui.view.FuseImageView
        android:id="@+id/fuse_image_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:drawableDefault="@drawable/fuse2_default"
        app:drawableFused="@drawable/fuse2_color" />


    <com.android.framework.libui.view.FuseImageView
        android:id="@+id/fuse_image_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:drawableDefault="@drawable/fuse3_default"
        app:drawableFused="@drawable/fuse3_color" />


    <com.android.framework.libui.view.FuseImageView
        android:id="@+id/fuse_image_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:drawableDefault="@drawable/fuse4_default"
        app:drawableFused="@drawable/fuse4_color" />


    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255" />

</LinearLayout>