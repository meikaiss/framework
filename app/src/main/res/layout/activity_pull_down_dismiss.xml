<?xml version="1.0" encoding="utf-8"?>
<com.android.framework.customview.viewgroup.PullDownDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_down_dismiss_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f00"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:padding="20dp"
            android:text="下拉关闭当前Activity" />


    </LinearLayout>

</com.android.framework.customview.viewgroup.PullDownDismissFrameLayout>